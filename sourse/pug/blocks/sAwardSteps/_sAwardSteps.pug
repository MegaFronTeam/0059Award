mixin sAwardSteps3(data)
	// start sAwardSteps
	+b.SECTION.sAwardSteps.section#sAwardSteps2&attributes(attributes)
		.container
			+e.row.row
				+e.col.col-lg-4: +awardStepWithIcon('Участникам', 'support@spremia.ru','people')
