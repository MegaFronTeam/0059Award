				+e.col.col-lg-4: +awardStepWithIcon('Партнерам', 'partners@spremia.ru','chat')
				+e.col.col-lg-4: +awardStepWithIcon('Общие вопросы', 'org@spremia.ru','touch')



mixin awardStepWithIcon(data, title, icon)
	+b.award-step--with-icon.A(href=`mailto:${title}`)
		+icon(icon)
		+e.content-wrapper
			+e.data.color-add.fw-500= data
			if title
				+e.title.h5= title
			if block
				block

mixin awardStep(data, title)
	+b.award-step.A(href='#')
		+e.data.color-add.fw-500= data
		if title
			+e.title.h5.fw-500= title
		if block
			block

mixin awardStepBlue(data, title)
	+b.award-step--blue.A(href='#')
		+img(src="img/svg/stages-bg.svg", alt="").img
		+e.data.fw-500= data
		if title
			+e.title.h5.fw-700= title
		if block
			block