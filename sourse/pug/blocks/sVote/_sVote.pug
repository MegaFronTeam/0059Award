mixin voteItem(title, star, item='award')
	+b.vote-item&attributes(attributes)
		if star
			+e.stars(data-star=`${star}`)
				+img(src=`img/svg/${item}.svg`, alt="")
				+img(src=`img/svg/${item}.svg`, alt="")
				+img(src=`img/svg/${item}.svg`, alt="")
			//- +icon(`${item}`)
			//- +icon(`${item}`)
			//- +icon(`${item}`)
		+in-c('checkbox', title, 'text')
		+buttonOpenModal

